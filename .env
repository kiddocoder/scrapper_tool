# Crawler Configuration
#--------------------

# Proxy Settings
PROXY_HOST=your-proxy-host.com
PROXY_PORT=8080
PROXY_USERNAME=your-username
PROXY_PASSWORD=your-password

# Crawler Concurrency
CRAWLEE_MIN_CONCURRENCY=1
CRAWLEE_MAX_CONCURRENCY=3
CRAWLEE_RETRY_COUNT=3
CRAWLEE_TIMEOUT_SECS=120

# Browser Settings
PUPPETEER_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
PUPPETEER_WINDOW_WIDTH=1920
PUPPETEER_WINDOW_HEIGHT=1080

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_PREFIX=googlemap:

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/crawler/googlemap.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=2
RATE_LIMIT_MAX_CONCURRENT=5

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_MS=5000
ERROR_THRESHOLD=50

# Storage
STORAGE_PATH=/path/to/storage
STORAGE_TYPE=local  # or 's3', 'gcs'

# AWS Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name

# Monitoring
ENABLE_MONITORING=true
MONITORING_PORT=9090

# Security
ENCRYPTION_KEY=your-encryption-key
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Performance Tuning
MEMORY_LIMIT_MB=2048
PAGE_TIMEOUT_MS=30000
NETWORK_IDLE_TIMEOUT_MS=5000
MAX_NAVIGATION_TIME_MS=60000

# Feature Flags
ENABLE_REVIEWS_SCRAPING=true
ENABLE_PHOTOS_SCRAPING=false
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# Geolocation Settings (for varying results)
DEFAULT_LATITUDE=37.7749
DEFAULT_LONGITUDE=-122.4194
DEFAULT_RADIUS_KM=50